@model List<appBodega.Models.User>
@{
    ViewData["Title"] = "Usuarios";
}
<h1>@ViewData["Title"]</h1>
<button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create", "User")'"> + Nuevo Usuario</button>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id Usuario</th>
            <th scope="col">Mail Usuario</th>
            <th scope="col">Contraseña Usuario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <th scope="row">@item.IdUser</th>
                <th>@item.UserMail</th>
                <th>@item.UserPassword</th>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a asp-action="Delete" asp-route-IdUser="@item.IdUser" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                        <!--<a asp-action="Edit" asp-route-EmpresaID=" class="btn btn-warning"><i class="bi bi-pencil-fill"></i></a>-->
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>

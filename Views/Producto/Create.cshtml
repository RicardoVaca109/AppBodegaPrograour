@model Producto
@{
    ViewData["Title"] = "Crear Productos";
}

<!--<a href="/">PÁGINA DE EDITAR AÑADIR PRODUCTOS</a> -->
<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="mb-3">
        <label>Nombre Producto</label>
        <input asp-for="Nombre" class="form-control" placeholder="Ingrese nombre del nuevo Producto" required>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Descripción Producto</label>
        <input asp-for="Descripcion" class="form-control" placeholder="Ingrese una descripción del nuevo Producto" required>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Precio Producto(Número Decimal)</label>
        <input asp-for="Precio" class="form-control" placeholder="Ingrese Precio del nuevo Producto" required type="number" step="0.01" pattern="^\d+(\.\d{1,2})?$>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Cantidad en Stock</label>
        <input asp-for="CtdenStock" class="form-control" placeholder="Ingrese Cantidad en stock del nuevo Producto" required>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Proveedor ID(Id de la empresa)</label>
        <input asp-for="ProveedorId" class="form-control" placeholder="Ingrese el ID del Proovedor para el nuevo Producto" required>
    </div>

    <div class="row col-6">
        <div class="col-6">
            <button type="submit" class="btn btn-secondary">Guardar</button>
        </div>
        <div class="col-6">
            <a asp-action="Index" class="btn btn-outline-dark">Regresar</a>
        </div>
        
    </div>
</form>

<p>Esta es la vista para crear productos.</p>
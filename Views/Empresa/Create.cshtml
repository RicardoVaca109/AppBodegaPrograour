@model Empresa
@{
    ViewData["Title"] = "Añadir Empresa";
}
<!--<a href="/">PÁGINA DE EDITAR EMPRESA</a> -->
<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="NombreEmpresa" class="form-control" placeholder="Ingrese nombre de la Empresa" required>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Descripción de la Empresa</label>
        <input asp-for="Resumen" class="form-control" placeholder="Ingrese una descripción de la empresa" required>
    </div>
    <div class="row col-6">
        <div class="col-6">
            <button type="submit" class="btn btn-secondary">Guardar</button>
        </div>
        <div class="col-6">
            <a asp-action="Index" class="btn btn-outline-dark">Regresar</a>
        </div>
    </div>
</form>

<p>Esta es la vista para Añadir una o varias empresas.</p>
@model Empresa
@{
    ViewData["Title"] = "Editar Empresa";
}
<!--<a href="/">PÁGINA DE EDITAR EMPRESA</a> -->
<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="NombreEmpresa" class="form-control" placeholder="Ingrese Nuevo nombre de la Empresa" required>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Descripción de la Empresa</label>
        <input asp-for="Resumen" class="form-control" placeholder="Ingrese una descripción de la empresa" required>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Confirmar</button>
        <a asp-action="Index" class="btn btn-primary">Regresar</a>
    </div>
</form>

<p>Esta es la vista para Añadir una empresa.</p>